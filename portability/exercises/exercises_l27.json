    "topic": "Subordinadas Adverbiales II (Finales, Consecutivas y Condicionales)",
    "exercises": [
        {
            "type": "multiple_choice",
            "question": "¿Qué expresan las oraciones finales?",
            "options": [
                "Consecuencia",
                "Tiempo",
                "Propósito/Finalidad",
                "Condición"
            ],
            "correct_answer": "Propósito/Finalidad",
            "explanation": "Las finales responden a '¿para qué?': expresan el propósito de la acción."
        },
        {
            "type": "multiple_choice",
            "question": "¿Cómo se niegan las oraciones finales?",
            "options": [
                "Ut non",
                "Ne",
                "Non ut",
                "Nec"
            ],
            "correct_answer": "Ne",
            "explanation": "Las finales usan 'ut' (afirmativo) y 'ne' (negativo): 'para que no'."
        },
        {
            "type": "multiple_choice",
            "question": "¿Cómo se reconoce una consecutiva?",
            "options": [
                "Tiene 'ne'",
                "Tiene adverbio de intensidad + 'ut'",
                "Usa indicativo",
                "Tiene 'si'"
            ],
            "correct_answer": "Tiene adverbio de intensidad + 'ut'",
            "explanation": "Las consecutivas van precedidas de tam, ita, sic, tantus, adeo... + 'ut'."
        },
        {
            "type": "multiple_choice",
            "question": "¿Cómo se niegan las consecutivas?",
            "options": [
                "Ne",
                "Ut non",
                "Non ut",
                "Nec ut"
            ],
            "correct_answer": "Ut non",
            "explanation": "A diferencia de las finales, las consecutivas usan 'ut non' para negar."
        },
        {
            "type": "multiple_choice",
            "question": "'Si hoc facis, erras' - ¿Qué tipo de condicional es?",
            "options": [
                "Irreal de presente",
                "Irreal de pasado",
                "Real (indicativo)",
                "Potencial"
            ],
            "correct_answer": "Real (indicativo)",
            "explanation": "Condicional real: indicativo en ambas partes. Expresa hechos o lógica."
        },
        {
            "type": "multiple_choice",
            "question": "'Si hoc faceres, errares' - ¿Qué tipo de condicional es?",
            "options": [
                "Real",
                "Irreal de presente",
                "Irreal de pasado",
                "Potencial futuro"
            ],
            "correct_answer": "Irreal de presente",
            "explanation": "Subjuntivo imperfecto en ambas partes: irreal de presente (no ocurre ahora)."
        },
        {
            "type": "multiple_choice",
            "question": "'Si hoc fecisses, erravisses' - ¿Qué tipo de condicional es?",
            "options": [
                "Real",
                "Irreal de presente",
                "Irreal de pasado",
                "Potencial"
            ],
            "correct_answer": "Irreal de pasado",
            "explanation": "Subjuntivo pluscuamperfecto: irreal de pasado (no ocurrió)."
        },
        {
            "type": "sentence_completion",
            "question": "Edo _____ vivam. (para vivir)",
            "options": [
                "ut",
                "ne",
                "si"
